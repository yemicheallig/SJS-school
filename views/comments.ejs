                </li> -->
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <main class="container-sm-fluid container-md row" style="margin-top: 80px;">
        <% if(comment.length !==0){ %>
            <% comment.forEach(elm=> { %>
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <p class="mb-1">
                                <%= elm.subject %>
                            </p>
                            <p class="mb-1">
                                <%= elm.email %>
                            </p>
                            <p class="mb-1">" <%= elm.message %> "
                            </p>
                            <div class="d-flex justify-content-end">
                                <small class="d-block">-<%= elm.name %></small>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
                    <% }else{ %>
                        <div class="col-12 col-md-6 col-lg-4 mb-4">
                            <div class="card shadow">
                                <div class="card-body">
                                    <h1 class="text-center">No Comment Exist</h1>
                                </div>
                            </div>
                        </div>
                        </div>
                        <% } %>
    </main>
