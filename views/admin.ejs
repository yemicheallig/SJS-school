                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto align-items-center text-light">
                        <li class="nav-item">
                            <a class="nav-link mx-2 text-light " href="/index"><i class="fas fa-home pe-2"></i>Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2 text-light" href="/blog"><i class="fas fa-blog pe-2"></i>Blogs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2 text-light" href="aboutUs"><i
                                    class="fas fa-info-circle pe-2"></i>About
                                Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2 text-primary active" href="./contactUs"><i
                                    class="fas fa-envelope pe-2"></i>Contact
                                Us</a>
                        </li>
